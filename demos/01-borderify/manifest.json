{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
    "description": "Adds a solid red border around google search text field",
    "icons": {
        "48": "icons/me.jpg"
    },
    "applications": {
        "gecko": {
            "id": "lasselle.a@sfeir.com-borderify"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.google.fr/*"
            ],
            "js": [
                "borderify.js"
            ]
        }
    ]
}